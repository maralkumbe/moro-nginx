<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:u="sap.ui.unified" xmlns:core="sap.ui.core" xmlns:t="sap.ui.table" xmlns:f="sap.ui.layout.form" xmlns:layout="sap.ui.layout" controllerName="it.greenorange.mes.controller.main" height="100%">
    <App id="app" autoFocus="false" backgroundOpacity="0.1">
        <Page class="sapUiContentPadding" showNavButton="false" enableScrolling="false">
            <headerContent>
                <Title text="{i18n>title}" />
                <Select selectedKey="{userLoggedModel>/userLogged}" editable="{= !${userLoggedModel>/isLogged}}" change="onChangeUser" forceSelection="false">
                    <core:ListItem key="P000025" text="P000025" />
                    <core:ListItem key="P000032" text="P000032" />
                </Select>
                <HBox justifyContent="Center">
                    <Label id="oClock" design="Bold" />
                </HBox>
            </headerContent>
            <content>
                <FlexBox class="sapUiSmallMargin loginForm" justifyContent="Center" alignItems="Center" alignContent="Center">
                    <items>
                        <Button icon="sap-icon://call" width="20rem" text="{chiamata}" press="onChiamataPress" />
                    </items>
                </FlexBox>
            </content>
        </Page>
    </App>
</mvc:View>
